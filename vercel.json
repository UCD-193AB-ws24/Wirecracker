{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["docs/**"]
      }
    },
    {
      "src": "./package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/docs",
      "dest": "/docs/index.html"
    },
    {
      "src": "/send-verification-email",
      "dest": "/backend/server.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/api/[^.]+",
      "dest": "/backend/server.js"
    },
    {
      "src": "/[^.]+",
      "dest": "/",
      "status": 200
    }
  ]
}
